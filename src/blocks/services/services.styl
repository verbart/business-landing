.services
  background rgba(white, .25) url('../images/services-bg.png') center / cover no-repeat
  padding-bottom 60px
  &__info
    margin-top -15px
    margin-bottom 40px
    color color_darkgrey
    text-align center
  &Item
    &__icon
      position relative
      display inline-block
      width 6.5rem
      height 6.5rem
      margin-bottom 1rem
      background-color color_blue
      border-radius 50%
      border .125rem solid white
      i
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        color white
        font-size 3rem
    &__caption
      margin-bottom 1rem
    &__description
      margin-bottom 3.5rem
