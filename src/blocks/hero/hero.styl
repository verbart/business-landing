.hero
  display flex
  align-items center
  min-height calc(100vh - 90px)
  margin-top 90px
  padding-top 40px
  padding-bottom 40px
  background linear-gradient(145deg, rgba(25, 80, 125, 0.45) 0%, rgba(255, 255, 255, 0.45) 100%),
             url('../images/hero-bg.png') center / cover no-repeat
  @media (max-width 992px)
    margin-top 66px
  @media (max-width 540px)
    margin-top 116px
    text-align center
  &__info
    max-width 31rem
  &__caption
    color white
    margin-top 0
    margin-bottom 38px
    @media (max-width 31rem)
      br
        display none
  &__description
    font 1rem/1.5 'Titillium Web', sans-serif
    margin-top 0
    margin-bottom 50px
    color white
